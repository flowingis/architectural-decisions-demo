{% extends 'base.html.twig' %}

{% block title %}Widget{% endblock %}

{% block body %}
    <h1>Widget</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ widget.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ widget.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ widget.description }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ widget.createdAt ? widget.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('widget_index') }}">back to list</a>

    <a href="{{ path('widget_edit', {'id': widget.id}) }}">edit</a>

    {{ include('widget/_delete_form.html.twig') }}
{% endblock %}
